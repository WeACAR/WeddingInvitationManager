@model WeddingInvitationManager.Models.Event

@{
    ViewData["Title"] = Model.Name;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>@Model.Name</h1>
        <p class="text-muted mb-0">Hosted by @Model.Host</p>
        <small class="text-muted">
            <i class="fas fa-calendar"></i> @Model.Date.ToString("MMMM dd, yyyy 'at' hh:mm tt")
        </small>
    </div>
    <div class="btn-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Dashboard" asp-route-id="@Model.Id" class="btn btn-outline-success">
            <i class="fas fa-chart-bar"></i> Dashboard
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle"></i> Event Details
                </h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <h6>Description</h6>
                    <p>@Model.Description</p>
                }
                
                @if (!string.IsNullOrEmpty(Model.LocationLink))
                {
                    <h6>Location</h6>
                    <a href="@Model.LocationLink" target="_blank" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-map-marker-alt"></i> View Location
                    </a>
                }
                
                <hr>
                <small class="text-muted">
                    Created: @Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")<br>
                    Last Updated: @Model.UpdatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                </small>
            </div>
        </div>
        
        <!-- Quick Stats -->
        <div class="row">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary">@Model.Contacts.Count</h3>
                        <p class="card-text">Contacts</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success">@Model.Invitations.Count(i => i.IsSent)</h3>
                        <p class="card-text">Sent</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-warning">@Model.Invitations.Count(i => i.IsUsed)</h3>
                        <p class="card-text">Used</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info">@Model.Contacts.Count(c => c.IsVip)</h3>
                        <p class="card-text">VIP</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-tools"></i> Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Contacts" asp-action="Index" asp-route-eventId="@Model.Id" class="btn btn-outline-primary">
                        <i class="fas fa-users"></i> Manage Contacts
                    </a>
                    <a asp-controller="Invitations" asp-action="Templates" asp-route-eventId="@Model.Id" class="btn btn-outline-warning">
                        <i class="fas fa-images"></i> Invitation Templates
                    </a>
                    <a asp-controller="Invitations" asp-action="GenerateAdvanced" asp-route-eventId="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-magic"></i> Generate Invitations
                    </a>
                    <a asp-controller="Invitations" asp-action="Send" asp-route-eventId="@Model.Id" class="btn btn-outline-success">
                        <i class="fas fa-paper-plane"></i> Send Invitations
                    </a>
                    <a asp-controller="QRScanner" asp-action="Scanner" asp-route-eventId="@Model.Id" class="btn btn-outline-secondary">
                        <i class="fas fa-qrcode"></i> QR Scanner
                    </a>
                    <hr>
                    <a asp-action="Dashboard" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="fas fa-chart-bar"></i> View Dashboard
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Danger Zone -->
        <div class="card mt-3 border-danger">
            <div class="card-header bg-danger text-white">
                <h6 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Danger Zone
                </h6>
            </div>
            <div class="card-body">
                <p class="card-text text-danger">
                    <small>Deleting this event will permanently remove all associated contacts, invitations, and scan records.</small>
                </p>
                <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="fas fa-trash"></i> Delete Event
                </button>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Events
    </a>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete "<strong>@Model.Name</strong>"?</p>
                <p class="text-danger"><strong>This action cannot be undone!</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete Event</button>
                </form>
            </div>
        </div>
    </div>
</div>
